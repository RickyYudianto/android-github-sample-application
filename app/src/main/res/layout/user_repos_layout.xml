<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="@integer/two"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/grid_width"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/one"
                android:layout_marginLeft="@dimen/normal_margin"
                android:layout_marginStart="@dimen/normal_margin"
                android:paddingBottom="@dimen/normal_padding"
                android:paddingTop="@dimen/normal_padding">

                <TextView
                    android:id="@+id/repo_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normal_margin"
                    android:layout_marginBottom="@dimen/normal_margin"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/repo_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/repo_name"
                    android:layout_marginTop="@dimen/normal_margin"
                    android:layout_marginBottom="@dimen/normal_margin"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/small_font_size"
                    android:ellipsize="end"
                    android:maxLines="@integer/three" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/grid_width"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/one"
                android:layout_marginLeft="@dimen/normal_margin"
                android:layout_marginStart="@dimen/normal_margin"
                android:paddingBottom="@dimen/normal_padding"
                android:paddingTop="@dimen/normal_padding">

                <TextView
                    android:id="@+id/repo_star"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normal_margin"
                    android:layout_marginBottom="@dimen/normal_margin"
                    android:gravity="end"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/repo_watcher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/repo_star"
                    android:layout_marginTop="@dimen/normal_margin"
                    android:layout_marginBottom="@dimen/normal_margin"
                    android:gravity="end"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/normal_font_size" />

                <TextView
                    android:id="@+id/repo_created"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/repo_watcher"
                    android:layout_marginTop="@dimen/normal_margin"
                    android:layout_marginBottom="@dimen/normal_margin"
                    android:gravity="end"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/normal_font_size" />

            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>